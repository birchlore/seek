<%= render 'pages/nav' %>
<div class="container">

  <div class="row">
    <div class="col-sm-6">
      <div class="videoWrapper">
        <%= @movie.embed.html_safe %>
      </div>
    </div>

    <div class="col-sm-6">
      <h1 class="text-left"><%= @movie.title %></h1>
      <p><%= @movie.description %></p>
   </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <h3 class="text-left"><%= @users.count %> <% if @users.count == 1 %>person <%= city(current_user) %> wants to see this<% else %> people <%= city(current_user) %> want to see this<% end %>. Click on their photo to send a message.</h3>
    </div>
    <div class="clearfix small-spacer"></div>
    <div class="col-sm-12">
      <%= render @users %>
    </div>
  </div>

</div>
<div class="spacer"></div>
