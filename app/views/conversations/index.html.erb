<%= render 'pages/nav' %>
<div class="container">
<div class="spacer">
  <%= link_to "< Back to dashboard", dashboard_path %>
</div>
   
  <div class="row">
   
     <div class="col-sm-12">
      
      <div class="small-spacer text-center alert alert-info">
        <p>Act quickly because conversations & connections will disappear forever once you have no movies in common.</p>
      </div>

        <% if @conversations.length > 0 %>
          <ul class="list-group conversations">
            <%= render partial: 'conversations/conversation', collection: @conversations %>
          </ul>
        <% else %>
          <h1 class="text-center">No Conversations :(</h1>
        <% end %>
       
        <%= will_paginate %>
    </div>
  </div>
</div>