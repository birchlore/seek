<li class="list-group-item<%= " unread" if conversation.is_unread?(current_user) %>">
  <div class="pull-left">
  <%= link_to 'Conversation with ' + participant_names(conversation), conversation_path(conversation) %> | Subject: <%= conversation.subject %>
  </div>

<% if current_user.is_expert? %>
   <div id="invoice-modal" class="pull-right">
      <button type="button" class="button-link" data-toggle="modal" data-target="#invoiceModal">
          Send Invoice
      </button>
   </div>
<% end %>

  <div class="btn-group-vertical pull-right" id="restore">
    <% if conversation.is_trashed?(current_user) %>
      <%= link_to 'Restore', restore_conversation_path(conversation), class: 'btn btn-xs btn-info', method: :post %>
    <% else %>
      <%= link_to '', conversation_path(conversation), class: 'glyphicon glyphicon-trash', :id=>"trash", method: :delete,
                  data: {confirm: 'Are you sure you want to delete this conversation?'} %>
   
    <% end %>
  </div>

 
</li>

 <div class="modal fade" id="invoiceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4>New Invoice</h4>
          </div>
          <%= render :template => new_job_path, :locals=>{:conversation=> conversation} %>

        </div>
      </div>
    </div>
